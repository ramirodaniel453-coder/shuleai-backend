{
  "name": "shuleai-backend",
  "version": "2.1.0",
  "description": "Complete School Intelligence System with PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node src/utils/seed.js",
    "migrate": "node src/utils/migrate.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:backup": "pg_dump shuleai > backups/shuleai_$(date +%Y%m%d).sql",
    "db:restore": "psql shuleai < backups/latest.sql",
    "pm2:start": "pm2 start server.js --name shuleai-backend",
    "pm2:stop": "pm2 stop shuleai-backend",
    "pm2:restart": "pm2 restart shuleai-backend",
    "pm2:logs": "pm2 logs shuleai-backend"
  },
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.33.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "express-fileupload": "^1.4.0",
    "express-session": "^1.17.3",
    "connect-pg-simple": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.5",
    "twilio": "^4.19.0",
    "socket.io": "^4.6.2",
    "socket.io-client": "^4.6.2",
    "csv-parser": "^3.0.0",
    "csv-stringify": "^6.4.4",
    "exceljs": "^4.4.0",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "qrcode": "^1.5.3",
    "winston": "^3.10.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "uuid": "^9.0.1",
    "axios": "^1.5.0",
    "ntp-client": "^0.5.3",
    "node-cron": "^3.0.3",
    "chrono-node": "^2.7.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.6.4",
    "eslint": "^8.49.0",
    "prettier": "^3.0.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}